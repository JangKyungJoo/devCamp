<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dialog_icon_size"
        android:layout_height="@dimen/dialog_icon_size"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/icon_guide_checkbox_true" />

    <TextView
        android:id="@+id/guideDetail_ItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="자극이 적은 클렌징하기"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/setting_text_group_size"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/guideDetail_ItemDescriptionButton"
        android:layout_gravity="top"
        android:layout_width="30dp"
        android:layout_height="20dp">

        <ImageView
            android:layout_width="@dimen/icon_guide_size"
            android:layout_height="@dimen/icon_guide_size"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_guide_question" />

    </FrameLayout>

    <TextView
        android:id="@+id/guideDetail_ItemDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용입니다"
        android:visibility="gone" />


</LinearLayout>