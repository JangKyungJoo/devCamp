<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/icon_group"
        android:layout_width="@dimen/icon_setting_group_size"
        android:layout_height="@dimen/icon_setting_group_size"
        android:layout_marginLeft="@dimen/icon_setting_group_margin"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/title_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/setting_text_group_size"
        android:layout_marginLeft="@dimen/icon_setting_group_margin"
        android:layout_gravity="center_vertical"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_text_group_size"
        android:layout_gravity="center_vertical"
        android:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/icon_toggle"
        android:layout_width="@dimen/icon_setting_toggle_width"
        android:layout_height="@dimen/icon_setting_toggle_height"
        android:layout_gravity="right|center_vertical" />

    <ImageView
        android:id="@+id/icon_arrow"
        android:layout_width="@dimen/icon_setting_child_size"
        android:layout_height="@dimen/icon_setting_child_size"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"/>

</LinearLayout>