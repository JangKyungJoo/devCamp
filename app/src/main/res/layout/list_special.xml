<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="4dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dday_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello world"
                    android:layout_gravity="center_vertical"
                    android:textColor="#8564CC"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/dday_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#8564CC"
                    android:background="@drawable/rounded_corner"
                    />

                <TextView
                    android:id="@+id/dday_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.02.16"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_corner_dday"
                    />

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/specialday_icon_01_edit"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"/>
    </FrameLayout>

</LinearLayout>