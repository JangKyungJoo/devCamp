<?xml version="1.0" encoding="utf-8"?>
<com.example.devcamp.DateCellView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:background="@drawable/shape_date_cell_border"
    android:padding="@dimen/date_cell_padding"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/id_cell_text"
                android:textSize="@dimen/date_cell_text_size"
                android:layout_gravity="left|center_vertical"/>

            <ImageView
                android:layout_width="@dimen/date_cell_special_size"
                android:layout_height="@dimen/date_cell_special_size"
                android:id="@+id/clean_result"
                android:visibility="gone"
                android:layout_gravity="right|center_vertical"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/date_cell_today_size"
                android:layout_height="@dimen/date_cell_today_size"
                android:src="@mipmap/icon_today"
                android:id="@+id/today"
                android:visibility="gone"
                android:layout_gravity="left"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/date_cell_icon_size"
                android:layout_height="@dimen/date_cell_icon_size"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/icon1"
                android:visibility="gone"
                android:layout_gravity="left|center_vertical"/>

            <ImageView
                android:layout_width="@dimen/date_cell_icon_size"
                android:layout_height="@dimen/date_cell_icon_size"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/icon2"
                android:visibility="gone"
                android:layout_gravity="right|center_vertical"/>

        </FrameLayout>

    </LinearLayout>

</com.example.devcamp.DateCellView>